<h1><%= @book.title%> (<%=@book.pages%> pages)</h1>

<h2>Authors: </h2>
<ul>
<% @book.authors.each do |author| %>
<li>
<%= link_to "#{author.name} b. (#{author.birth_year})" , author_path(author) %>



<%= form_tag book_path(@book.id), method: "delete" do %>
  <%= submit_tag "Remove #{author.name}", :name => "author[#{author.id}]" %>
<%end%>

</li>
<%end%>
</ul>

<%= form_for @book do |f| %>
<%= f.collection_select :authors, Author.all, :id, :name %>
<%= f.submit%>
<% end %>